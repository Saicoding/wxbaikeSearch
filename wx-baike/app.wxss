.overline {
  overflow: hidden; /*超出部分隐藏*/
  text-overflow: ellipsis; /* 超出部分显示省略号 */
  white-space: nowrap; /*规定段落中的文本不进行换行 */
}



/* 超2行省略号 */

.overline2 {
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
}

/* 底部保存按钮和删除按钮 */

.bottom {
  font-size: 30rpx;
  position: fixed;
  bottom: 30rpx;
  width: 690rpx;
  margin-left: 30rpx;
  height: 100rpx;
  line-height: 100rpx;
  text-align: center;
  color: white;
  background: #f40;
  letter-spacing: 5rpx;
  border-radius: 8rpx;
}

.bottom2 {
  font-size: 30rpx;
  bottom: 0;
  width: 710rpx;
  position: fixed;
  padding-left: 20rpx;
  padding-right: 20rpx;
  background:white;
}

.bottom2-item {
  width: 345rpx;
  height: 100rpx;
  margin-bottom: 20rpx;
  line-height: 100rpx;
  text-align: center;
  color: white;
  border-radius: 8rpx;
}

/* 保存按钮 */

.vline {
  color: #999;
  font-size: 18rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

/* 头像 */

.ab1 {
  border: 1px solid #e2e2e3;
  border-radius: 100%;
  background: white;
}

.ab2 {
  border: 1px solid #e2e2e3;
  padding: 2rpx;
  height: auto;
  border-radius: 6rpx;
  background: white;
}


.bb {
  border-bottom: 1px solid rgba(230, 230, 230, 0.9);
}

.bt {
  border-top: 1px solid rgba(230, 230, 230, 0.9);
}

.bg1 {
  background: #ff8f2b;
}

.bg2 {
  background: #f40;
}

/* 加载图标样式 */
.loading, .hasNoMore {
  line-height: 80rpx;
  height: 80rpx;
  color: #999;
  font-size: 22rpx;
}

.loading {
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading-img {
  width: 20rpx;
  height: 20rpx;
  margin-right: 20rpx;
}


/* UI布局 */
.bc {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
  flex-direction: row;
  -webkit-box-pack: start;
  -webkit-justify-content: flex-start;
  justify-content: flex-start;
  -webkit-box-align: center;
  -webkit-align-items: center;
  align-items: center;
}

.ba {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-pack: start;
  justify-content: space-around;
}

.bw {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
  flex-direction: column;
  -webkit-box-align: start;
  -webkit-align-items: flex-start;
  align-items: flex-start;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
  justify-content: space-between;
}

